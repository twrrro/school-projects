<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/buttonAccelerometer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Accelerometer Sensor"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/buttonCompass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Compass Sensor"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/buttonGyroscope"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gyroscope Sensor"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/buttonHumidity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Humidity Sensor"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/buttonLight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Light Sensor"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/buttonMagnetometer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Magnetometer Sensor"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/buttonPressure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pressure Sensor"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/buttonProximity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Proximity Sensor"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/buttonThermometer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thermometer Sensor" />

    </LinearLayout>
</ScrollView>